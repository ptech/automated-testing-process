{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": [
            "node",
            "@types/node"
        ]
    },
    "include": [
        "tests/step-definitions/**/*",
        "src/support/**/*",
        "src/pages/**/*",
        "src/utils/**/*",
        "src/config/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "reports"
    ]
}