{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths" : [
            "tests/features/*"
        ],
        "dryRun": false,
        "require": [
            "tests/step-definitions/*.ts",
            "src/support/*.ts"
        ],
        "requireModule": ["ts-node/register"],
        "format": [
            "progress-bar",
            "html:test-results/reports/cucumber-report.html",
            "json:test-results/reports/cucumber-report.json"
        ],
        "parallel": 2,
        "retry": 0
    }
}
